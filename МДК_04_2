using System;
using System.Reflection;

public class Person
{
    public string FullName { get; set; }
    public int Age { get; set; }

    public Person(string fullName, int age)
    {
        FullName = fullName;
        Age = age;
    }

    public Person()
    {
        return;
    }
}

class Program
{
    static void Main()
    {
        Person person1 = new Person("Anastasiya", 17);
        Person person2 = new Person();
        Move(person1.Age);
        Talk(person1.FullName);
    }

    private static void Move(int age)
    {
        Console.WriteLine("Данному человеку " + age + " лет");
    }

    private static void Talk(string fullname)
    {
        Console.WriteLine("Данного человека зовут " + fullname);
    }
}
